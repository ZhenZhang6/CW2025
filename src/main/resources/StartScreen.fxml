<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="ui.StartScreenController"
           prefWidth="500" prefHeight="700"
           style="-fx-background-image: url('background_image.png');
                  -fx-background-size: cover;
                  -fx-background-position: center;">

    <Rectangle width="500" height="700" fill="#00000055"/>

    <VBox spacing="35" alignment="CENTER">

        <Text text="TETRIS"
              style="-fx-font-size: 72px; -fx-font-weight: bold; -fx-fill: white;">
            <effect>
                <DropShadow color="#00eaff" radius="20" spread="0.2"/>
            </effect>
        </Text>

        <Button fx:id="startBtn" text="Start Game"
                style="
                    -fx-font-size: 24px;
                    -fx-font-weight: bold;
                    -fx-text-fill: white;
                    -fx-background-radius: 10;
                    -fx-background-color: linear-gradient(to bottom, #00c6ff, #0072ff);
                    -fx-padding: 12 26;">
            <effect>
                <DropShadow color="#00eaff" radius="15"/>
            </effect>
        </Button>

        <Button fx:id="exitBtn" text="Exit Game"
                style="
                    -fx-font-size: 20px;
                    -fx-font-weight: bold;
                    -fx-text-fill: white;
                    -fx-background-radius: 10;
                    -fx-background-color: linear-gradient(to bottom, #ff5f6d, #ff0000);
                    -fx-padding: 10 20;">
            <effect>
                <DropShadow color="red" radius="15"/>
            </effect>
        </Button>

    </VBox>

</StackPane>
