<?import ui.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<Pane fx:controller="ui.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>

    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel"
                      hgap="1" vgap="1"
                      layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Button fx:id="pauseButton"
            text="Pause"
            layoutX="335" layoutY="30"
            onAction="#togglePause"
            styleClass="menu-btn"/>

    <Button fx:id="restartButton"
            text="Restart"
            layoutX="335" layoutY="80"
            onAction="#restartGame"
            styleClass="menu-btn"/>

    <Label fx:id="scoreLabel"
           text="Score: 0"
           layoutX="335" layoutY="130"
           styleClass="score-board"/>

    <Label fx:id="linesLabel"
           text="Lines: 0"
           layoutX="335" layoutY="180"
           styleClass="score-board"/>

    <Label fx:id="highScoreLabel"
           text="Highest: 0"
           layoutX="335" layoutY="230"
           styleClass="score-board"/>


    <BorderPane layoutX="330" layoutY="280" styleClass="next-box">
        <center>
            <GridPane fx:id="nextPreview"
                      hgap="0" vgap="0"
                      styleClass="next-preview-grid"/>
        </center>
    </BorderPane>


    <Group fx:id="groupNotification"
           layoutX="14" layoutY="203">

        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>

    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</Pane>
